<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_16dp"
    android:paddingRight="@dimen/size_16dp"
    android:paddingTop="@dimen/size_8dp"
    android:paddingBottom="@dimen/size_8dp">

    <ImageView
        android:id="@+id/videoThumbnail"
        style="@style/Thumbnail"
        android:src="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Image" />

    <TextView
        android:id="@+id/videoTitleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Ink Cartidges Are A Scam"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/videoThumbnail"
        app:layout_constraintTop_toTopOf="@+id/videoThumbnail" />

    <TextView
        android:id="@+id/videoDateSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="17/08/2007"
        app:layout_constraintBottom_toBottomOf="@+id/videoThumbnail"
        app:layout_constraintStart_toEndOf="@+id/videoThumbnail"
        app:layout_constraintTop_toBottomOf="@+id/videoTitleSmall"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>